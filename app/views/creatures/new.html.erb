<div class="container">
  <h1>Enter a new creature:</h1>
  <div class="row">
      <%= bootstrap_form_for @creature do |f| %>
      <%= f.text_field :name, :placeholder => "Enter a name"%>
      <%= f.text_field :description, :placeholder => "Enter a description" %>
      <%= f.collection_check_boxes :tag_ids, @tags, :id, :name %>
      <%= f.submit "Submit", class: "btn" %>
      <% end %>

  </div>
</div>